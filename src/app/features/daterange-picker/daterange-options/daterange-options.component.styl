.options-list
    border-right: 1px solid #e0e0e0
    font-size: 13px
    background-color: #fff
    width: 200px
    .list-group
        border-bottom: 1px solid #e0e0e0
        padding: 15px 0
    .list-group-item
        border-radius: 0
        border: none
        font-size: inherit
        line-height: 32px
        position: relative
        display: flex
        align-items: center
        color: rgba(0,0,0,.87)
        cursor: pointer
        padding: 0 16px
        outline: none
        &:hover
            background-color: #eee
        &.active
            background-color: #eee
            &::before
                content: ""
                position: absolute
                top: 0
                left: 1px
                display: block
                width: 3px
                height: 100%
                background-color: #4285f4
    button
        text-align: left
        border: none
        outline: none
        background-color: transparent
        padding: 0
        cursor: pointer
        color: inherit
    .btn-right
        display: inline-flex
        width: 24px
        height: 24px
        align-items: center
        justify-content: center
        border-radius: 50%
        margin-left: auto
        margin-right: -8px
        &:focus
            background-color: rgba(0, 0, 0, 0.14)
    .dropdown-menu
        left: 8px!important
        box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.14), 0 1px 10px 0 rgba(0, 0, 0, 0.12), 0 2px 4px -1px rgba(0, 0, 0, 0.2)
        border-radius: 0
        border: none
        font-size: 13px
        min-width: none
        width: auto
        &.list-group
            padding: 0
            width: auto
            display: none
            &.show
                display: flex

.input-container
    position: relative
    height: 24px
    max-width: 28px
    margin-right: 4px
    border-bottom: 1px solid rgba(0, 0, 0, 0.12)
    display: flex
    align-items: center


.date-input
    width: 100%
    height: 25px
    padding: 0
    border: none
    background-color: transparent
    &:focus + .input-underline
        transform: none
.input-underline
    width: 100%
    height: 2px
    background-color: #4285f4
    position: absolute
    bottom: -3px
    left: 0
    transform: scale3d(0, 1, 1)
    transition: transform .3s ease