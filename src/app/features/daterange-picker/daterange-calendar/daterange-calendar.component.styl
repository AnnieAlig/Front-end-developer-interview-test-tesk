
.daterange-calendar
    height: 386px
    width: 260px
    overflow-y: scroll

::-webkit-scrollbar
    width: 4px
::-webkit-scrollbar-track
    background-color: #fff
    &:hover
        background-color: #eee
::-webkit-scrollbar-thumb
    background-color: #888
::-webkit-scrollbar-thumb:hover
    background-color: #4285f4

.month
    position: relative
.month-title
    padding-left: 12px
    font-size: 13px
    line-height: 36px
    color: rgba(0,0,0,.54)

    position: absolute
    top: 0
    left: 0
    margin: 0
    z-index: 1
    pointer-events: none

.day
    width: 36px
    height: 36px
    display: inline-block
    position: relative
    cursor: pointer
    text-align: center
    line-height: 36px
    font-size: 13px
    border-radius: 50%
    color: rgba(0, 0, 0, 0.87)
    &:hover
        background-color: #eee
        box-shadow: inset 0 0 0 1px rgba(0,0,0,.38)

.today
    box-shadow: inset 0 0 0 1px #eee

.invisible
    pointer-events: none
    color: transparent
    cursor: default

.highlight
    &::before
        content: ' '
        width: 100%
        height: 100%
        position: absolute
        z-index: -1
        top: 0
        right: 0
        bottom: 0
        left: 0
        background-color: #c6dafc
    &.start_day::before
        border-top-left-radius: 50%
        border-bottom-left-radius: 50%
    &.end_day::before
        border-top-right-radius: 50%
        border-bottom-right-radius: 50%

.active, .start_day, .end_day
    background-color: #4285f4
    color: #fff
    &:hover
        color: rgba(0, 0, 0, 0.87)
